<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:id="@+id/main_item_name"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_item_quantity"
        android:textSize="12sp"
        android:layout_marginLeft="20dp"
        android:text="available: "
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/main_item_name"
        android:textColor="#808080"/>

    <EditText
        android:layout_width="150dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_quantity_edittext"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="Quanity"
        android:textSize="10sp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/main_item_quantity"/>

    <Button
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-20dp"
        android:id="@+id/add_item_to_shoplist_button"
        android:layout_toRightOf="@id/item_quantity_edittext"
        android:layout_below="@id/main_item_name"/>

</RelativeLayout>